    <!-- Ïó¨Í∏∞ÍπåÏßÄ ÌôîÏõê Ï∂îÎ∞© Î™®Îã¨ -->
    <script>
        let ws = new WebSocket("ws://localhost:8000/group/detail")
        
        // Ï†ÑÏÜ° Î≤ÑÌäº ÏÇ≠Ï†úÎ°ú Ïù∏Ìï¥ ÏóÜÏï∞
         document.getElementById('chatSend').addEventListener('click', (e) => {
            let message = document.getElementById('chatTextInput').value
            if (message !== '') { // messageÍ∞Ä Îπà Í∞íÏù¥ ÏïÑÎãê ÎïåÎßå Ï†ÑÏÜ°
                ws.send(message) // ÏÑúÎ≤ÑÏùò endpointÏóê Î©îÏÑ∏ÏßÄ Ï†ÑÏÜ°
                document.getElementById('chatTextInput').value = ''
                
                let chatContent = document.getElementById('chatContent')
                chatContent.scrollTop = chatContent.scrollHeight
            }
        })
        
        // Ï±ÑÌåÖÏ∞Ω ÏúÑÏπò Ï†úÏùº ÌïòÎã®ÏúºÎ°ú ÏÑ∏ÌåÖ
        $(document).ready((e) => {
            let chatContent = document.getElementById('chatContent')
            chatContent.scrollTop = chatContent.scrollHeight
        })
        
        // endpointÎ°úÎ∂ÄÌÑ∞ Ï†ÑÏÜ°Îêú Î©îÏÑ∏ÏßÄ Î∞õÍ∏∞
        ws.onmessage = (message) => {
            let messageData = JSON.parse(message.data)
            
            let br1 = $('<br><br>')
            let br2 = $('<br><br>')
            let containerDiv = $('<div>')
            let nicknameDiv = $('<div>').append(messageData.nickname)
            let messageDiv = $('<div>').append(messageData.message)
            
            if (messageData.nickname === "${nickname}") {
                containerDiv.css({
                    'text-align' : 'right'
                })
                nicknameDiv.css({
                    'display' : 'inline',
                    'padding' : '5px',
                    'margin' : '10px',
                    'font-size' : 'small'
                })
                containerDiv.append(nicknameDiv)
                containerDiv.append(br1)
                
                messageDiv.css({
                    'display' : 'inline',
                    'background-color' : 'rgb(0, 17, 84)',
                    'color' : 'white',
                    'padding' : '5px',
                    'margin' : '10px',
                    'border-radius' : '5px 5px 5px'
                })
                containerDiv.append(messageDiv)
                containerDiv.append(br2)
                $('#chatContent').append(containerDiv)
            } else {
                nicknameDiv.css({
                    'display' : 'inline',
                    'padding' : '5px',
                    'margin' : '10px',
                    'font-size' : 'small'
                })
                containerDiv.append(nicknameDiv)
                containerDiv.append(br1)
                
                messageDiv.css({
                    'display' : 'inline',
                    'background-color' : '#eee',
                    'padding' : '5px',
                    'margin' : '10px',
                    'border-radius' : '5px 5px 5px'
                })
                containerDiv.append(messageDiv)
                containerDiv.append(br2)
                $('#chatContent').append(containerDiv)
            }
            
            let chatContent = document.getElementById('chatContent')
            chatContent.scrollTop = chatContent.scrollHeight
        }
        
        // ÏóîÌÑ∞Î≤ÑÌäº ÏûÖÎ†• Ïãú Ï±ÑÌåÖ ÏûÖÎ†•Î∞õÍ∏∞
        document.getElementsByClassName('chat-grid')[0].addEventListener('keyup', (e) => {
            if (event.keyCode === 13) {
                let message = document.getElementById('chatTextInput').value
                if (message !== '') {
                    ws.send(message)
                    document.getElementById('chatTextInput').value = ''
                    let chatContent = document.getElementById('chatContent')
                    chatContent.scrollTop = chatContent.scrollHeight
                }
            }
        })
        
        // Í∑∏Î£π ÏÇ≠Ï†ú Î≤ÑÌäº ÎàåÎ†ÄÏùÑ Ïãú
        $('#deleteGroupBtn').on('click', (e) => {
            let confirmDelete = confirm('Ï†ïÎßêÎ°ú Í∑∏Î£πÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')
            if (confirmDelete) {
                location.href = "/group/delete?group_seq=" + ${loginSession.group_seq}
            }
        })
        
        // Í∑∏Î£π ÌÉàÌá¥ Î≤ÑÌäº ÎàåÎ†ÄÏùÑ Ïãú
        $('#signoutGroupBtn').on('click', (e) => {
            let confirmSignout = confirm('Ï†ïÎßêÎ°ú Í∑∏Î£πÏùÑ ÌÉàÌá¥ÌïòÏãúÍ≤†ÏäµÎãàÍπå?')
            if (confirmSignout) {
                location.href = "/group/signout?group_seq=" + ${loginSession.group_seq}
            }
        })
        
        // Î∞©Ïû•Ïùò ÌïúÎßàÎîî ÏàòÏ†ï Î≤ÑÌäº ÎàåÎ†ÄÏùÑ Ïãú
        $('#modifyRoomContentSubmitBtn').on('click', (e) => {
            let group_content = $('#modifyRoomContentInput').val()
            let group_seq = parseInt(${groupDto.group_seq})
            
            let modifyGroupContentConfirm = confirm('Ï†ïÎßê Î≥ÄÍ≤ΩÌïòÏãúÍ≤†ÏäµÎãàÍπå?')
            if (modifyGroupContentConfirm) {
                if (group_content === '') {
                    alert('Î≥ÄÍ≤ΩÌï† ÎÇ¥Ïö©ÏùÑ ÏûÖÎ†•Ìï¥ Ï£ºÏã≠ÏãúÏò§.')
                    return
                } else {
                    $.ajax({
                        url : "/group/modify",
                        type : "post",
                        data : { group_content : group_content, group_seq : group_seq },
                        success : (result) => {
                            console.log(result)
                            alert('ÏàòÏ†ïÏù¥ ÏôÑÎ£åÎêòÏóàÏäµÎãàÎã§.')
                            location.href = "/group/room?group_seq=" + group_seq
                        },
                        error : (error) => {
                            console.log(error)
                        }
                    })
                }
            }
        })
        
        // Í∑∏Î£π Î¶¨Ïä§Ìä∏ Î≤ÑÌäº ÎàåÎ†ÄÏùÑ Ïãú
        $('#goBackBtn').on('click', (e) => {
            location.href = "/group/"
        })
        
        // ÌöåÏõê Ï∂îÎ∞© Î≤ÑÌäºÏùÑ ÎàåÎ†ÄÏùÑ Ïãú
        $('#kickoutSubmitBtn').on('click', (e) => {
            let kickoutNicknameInput = $('#kickoutNicknameInput').val()
            if (kickoutNicknameInput === '') {
                alert('Ï∂îÎ∞©Ìï† ÎãâÎÑ§ÏûÑÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.')
                return
            } else if (kickoutNicknameInput === "${loginSession.mem_nick}") {
                alert('ÏûêÍ∏∞ ÏûêÏã†ÏùÑ Ï∂îÎ∞©Ìï† Ïàò ÏóÜÏäµÎãàÎã§.')
                return
            } else {
                $.ajax({
                    url : "/group/kickoutCheck",
                    type : "get",
                    data : { mem_nick : kickoutNicknameInput },
                    success : (result) => {
                        if (result === 'no_data') {
                            alert('Ìï¥ÎãπÌïòÎäî ÎãâÎÑ§ÏûÑÏù¥ Ï°¥Ïû¨ÌïòÏßÄ ÏïäÏäµÎãàÎã§.')
                            return
                        } else if (result === 'not_same_room') {
                            alert('Í∞ôÏùÄ Î∞©Ïóê ÏûàÎäî ÌöåÏõêÏù¥ ÏïÑÎãôÎãàÎã§.')
                            return
                        } else if (result === 'same_room') {
                            let confirmKickout = confirm('Ï†ïÎßêÎ°ú Ï∂îÎ∞©ÏãúÌÇ§Í≤†ÏäµÎãàÍπå?')
                            if (confirmKickout) {
                                $.ajax({
                                    url : "/group/kickout",
                                    type : "post",
                                    data : { mem_nick : kickoutNicknameInput },
                                    success : (re_result) => {
                                        console.log(re_result)
                                        if (re_result === 'success') {
                                            location.href = "/group/room?group_seq=" + ${loginSession.group_seq}
                                        }
                                    },
                                    error : (error) => {
                                        console.log(error)
                                    }
                                })
                            }
                        }
                    },
                    error : (error) => {
                        console.log(error)
                    }
                })
            }
        })
    </script>
